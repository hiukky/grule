{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "include": ["lib/**/*", "src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
